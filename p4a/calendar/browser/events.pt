<html xmlns="http://www.w3.org/1999/xhtml" 
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<head>

  <metal:block metal:fill-slot="head_slot">
  <style type="text/css" 
         media="all"
         tal:content=
          "string: @import url(${context/++resource++p4acalendar/calendar.css});">
  </style>
  <script type="text/javascript" src="calendar.js"
          tal:attributes="src string:${context/++resource++p4acalendar/anchor-position.js}">
  </script>
  <script type="text/javascript" src="calendar.js"
          tal:attributes="src string:${context/++resource++p4acalendar/popup-window.js}">
  </script>
  <script type="text/javascript" src="calendar.js"
          tal:attributes="src string:${context/++resource++p4acalendar/calendar.js}">
  </script>
  </metal:block>
  
</head>

<body>

<div metal:fill-slot="main"
     class="p4acalendar">

    <tal:block replace="structure view/render_filter"/>
     <tal:block define="link view/event_creation_link" condition="python:link">
       <a tal:attributes="href link">Create event</a> | </tal:block>
    View: <a class="view_link" href="month.html">Month</a> |
    <a class="view_link" href="events.html" tal:condition="options/show_past">
      Event list</a>
    <a class="view_link" href="past_events.html" 
      tal:condition="not:options/show_past">
      Past events list</a>

   <div class="eventlist">
     <div tal:repeat="month options/months">
       <h1>
         <tal:block content="month/month_name" i18n:translate=""/>
         <tal:block content="month/year"/>
       </h1>
       <div class="event" tal:repeat="event month/events">
         <div class="event_details">
           <tal:block content="month/month_name" i18n:translate=""/>
           <tal:block content="event/day"/>
         </div>
         <div class="event_body">
           <a class="event_title" tal:content="event/title"
              tal:attributes="href event/url" /><br/>
           <tal:block content="event/description"/>
         </div>
         <div style="clear: both;"> </div>
       </div>
     </div>
   </div>

</div> <!-- end main fill slot -->

</body>
</html>
