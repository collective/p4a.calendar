<configure
    xmlns="http://namespaces.zope.org/browser">

  <resourceDirectory
      name="p4acalendar"
      directory="resources"
      permission="zope2.View"
      />

  <menu
      id="object_buttons"
      title="Plone Content Drop-Down Menu"
      />
      
  <menuItem
      menu="object_buttons"
      for="p4a.calendar.interfaces.IPossibleCalendar"
      title="Activate / Configure Calendar"
      action="${object_url}/calendar-config.html"
      permission="cmf.ModifyPortalContent"
      />

  <page
      name="calendar-config.html"
      for="p4a.calendar.interfaces.IPossibleCalendar"
      permission="cmf.ModifyPortalContent"
      class=".config.ConfigView"
      />

  <page
      name="month.html"
      for="p4a.calendar.interfaces.ICalendarEnhanced"
      permission="zope2.View"
      class=".month.MonthView"
      template="month.pt"
      />

  <page
      name="icalendar.ics"
      for="p4a.calendar.interfaces.ICalendarEnhanced"
      permission="zope2.View"
      class=".icalendar.iCalendarView"
      template="icalendar.pt"
      />

</configure>
